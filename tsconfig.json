{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "sourceMap": true, //disable this in prod
    "strict": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "@testing-library/jest-dom", "vite/client"],
    "paths": {
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "@api/*": ["src/api/*"]
    }
  },
  "include": ["src", "vite.config.ts", "postcss.config.js", "tailwind.config.js"],
  "exclude": ["node_modules", "jest.config.ts"],
  "lib": ["dom", "dom.iterable", "esnext"],
  "outDir": "./dist",
  "rootDir": "./src",
  "noEmitOnError": true
}
